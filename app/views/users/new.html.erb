<%= form_for(@user) do |f| %>
	<div class="polje">
	<%= f.label :name, "Ime" %><br />
	<%= f.text_field :name %>
	</div>
	<div class="polje">
	<%= f.label :surname, "Priimek" %><br />
	<%= f.text_field :surname %>
	</div>
